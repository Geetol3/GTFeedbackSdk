<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geetol3.feedback" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取设备状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 阿里云oss需要 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="false"
        android:persistent="true"
        android:supportsRtl="true">
        <!-- 反馈开始 -->
        <activity android:name=".activities.GTSuggestListActivity"
            android:screenOrientation="portrait"
            android:label="反馈列表"/>
        <activity android:name=".activities.GTSuggestAddActivity"
            android:screenOrientation="portrait"
            android:label="添加反馈"/>
        <activity android:name=".activities.GTSuggestDetailActivity"
            android:screenOrientation="portrait"
            android:label="反馈详情"/>
        <activity android:name=".activities.GTImageShowActivity"
            android:screenOrientation="portrait"
            android:label="图片展示"/>
        <activity android:name=".activities.GTSuggestReplyActivity"
            android:screenOrientation="portrait"
            android:label="反馈回复"/>
        <!-- 反馈结束 -->
    </application>
</manifest>
